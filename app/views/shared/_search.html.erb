<div class="navbar-header pull-left search-area input-group">
  <%= text_field_tag :q, params[:q], class: "search-box", placeholder: "Search.." %>
  <button type="button" class="search-box dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>
  <div class="dropdown-menu dropdown-menu-right flter" role="menu">
    <div class="form-group">
      <label for="filter">Filter by</label>
      <div>
        <%= select_tag :contains, options_for_select([['Contains',0],['Equals',1],['Starts with',2],['Ends with',3]],params[:contains]), class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label for="contain">Created At</label>
      <div class="row">
          <div class='col-sm-6'>
              <%= text_field_tag :from, params[:from], class: "form-control datetimepicker4", placeholder: "From" %>
          </div>
          <div class='col-sm-6'>
              <%= text_field_tag :to, params[:to], class: "form-control datetimepicker4", placeholder: "To" %>
          </div>
          <script type="text/javascript">
              $(function () {
                  $('.datetimepicker4').datetimepicker({
                    format: 'DD/MM/YYYY'
                  });
              });
          </script>
      </div>
    </div>
    <button type="submit" class="pull-right" ><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
  </div>
  <button class="search-box" type="submit" ><i class="glyphicon glyphicon-search"></i></button>
</div>